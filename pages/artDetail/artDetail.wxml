<!--pages/artDetail/artDetail.wxml-->
<view class='container'>
  <swiper class='swiper-container' indicator-dots="true" indicator-color="#BCBCBC" indicator-active-color="#fff" autoplay="true" interval="2000">
    <block wx:for="{{banner_list}}" wx-for-item="item" wx:key="key">
      <swiper-item>
        <image src="{{item}}" class="swiper-item" mode='scaleToFill' bindtap='swiper_item_click' />
      </swiper-item>
    </block>
  </swiper>
  <view class='bottom-item-container'>
    <view class='flex-row-1'>
      <image class='art-image-artist-icon' src='/images/home/test_pic.png' />
      <view class='flex-column-1 one-line-with-dot'>
        <text class='artist-name'>name</text>
        <text class='artist-rank'>rank</text>
        <text class='artist-rank'>rank</text>
      </view>
    </view>
    <view class='lijiyuyue'>立即预约</view>
  </view>

</view>