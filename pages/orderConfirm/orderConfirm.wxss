/* pages/orderConfirm/orderConfirm.wxss */

.express-item
{
  width: 750rpx;
  color: #333;
  font-size: 32rpx;
    display: flex;
  justify-content: space-between;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 10rpx solid #eee; 
}
.right-arrow
{
  width: 16rpx;
  height: 28rpx;
}
.goods-item
{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  padding: 30rpx 30rpx;
}

.goods-image
{
  width: 184rpx;
  height: 184rpx;
}
.goods-name
{
  margin-top:30rpx; 
  color: #333;
  font-size: 28rpx;
}
.goods-price
{
  margin-top:10rpx; 
  color: #f42c90;
  font-size: 28rpx;
}
.confirm-item
{
  border-top: 2rpx solid #eee;
  align-items: center;
  display: flex;
  position: fixed;
  bottom: 0rpx;
  z-index: 2;
  height: 100rpx;
  font-size: 32rpx;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
}
.price
{
  margin-left:30rpx; 
  color: #f42c90;
}
.dui-huan
{
  height: 60rpx;
  width: 150rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #f42c90;
  color: #fff;
  border-radius: 30rpx;
}