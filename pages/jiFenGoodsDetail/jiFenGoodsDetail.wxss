.swiper-container
{
  width: 100%;
  height: 760rpx;
}
.swiper-item
{
  width: 750rpx;
  height: 760rpx;
}
.swiper-item-container
{
  width: 750rpx;
  height: 760rpx;
  position: relative;
}
.indicator-view
{
  position: absolute;
  z-index: 2;
  bottom: 50rpx;
  right: 30rpx;
  background-color: #aaa;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  color: #fff;
  font-size: 20rpx;
}
.title-name
{
  margin-top: 50rpx;
  color: #333;
  font-size: 32rpx;
  padding-left: 30rpx;
  width: 700rpx;
}
.price-item-container
{
  display: flex;
  padding-left: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  border-bottom: 10rpx solid #eee;
}
.price
{
  color: #f42c90;
  font-size: 48rpx;
}
.price-dan-wei
{
  margin-left:20rpx; 
    color: #f42c90;
  font-size: 24rpx;
}
.info1
{
  margin-left:30rpx;
  color:#aaa;
  font-size: 24rpx; 
}
.origin-price
{
  display: flex;
  position: relative;
    margin-left: 20rpx;
}
.origin-price-text
{
  height: 32rpx;
  line-height: 32rpx;
  color: #aaa;
  font-size: 24rpx;
}


.origin-line
{
  z-index: 2;
  position: absolute;
  width: 100%;
  background-color: #aaa;
  height: 3rpx;
  top: 50%;
}

.goods-detail-title
{
  color: #f42c90;
  font-size: 28rpx;
  padding: 30rpx 30rpx;

}

.li-ji-dui-huan
{
  z-index: 2;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  background-color: #f42c90;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  height: 98rpx;
  line-height: 98rpx;
}
